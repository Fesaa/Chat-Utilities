
.window {
  width: 200;
  height: 50%;
  bottom: 1;
  right: 1;
  height-precision: 12;

  background-color: rgba(10, 10, 10, 100);

  .title-bar {
    left: 0;
    top: 0;
    right: 0;
    height: 14;
    background-color: rgba(10, 10, 10, 100);

    .title {
      left: 2;
      top: 2;
    }

    .button {
      right: 0;
      top: 50%;
      height: 8;
      width: 8;

      padding: 3;

      alignment-y: center;
      background-color: rgba(10, 10, 10, 100);

      .icon {
        left: 0.5;
        top: 0.5;
        width: 8;
        height: 8;
        use-floating-point-position: true;
      }
    }

    .button:hover {
      background-color: rgba(0, 0, 0, 200);
    }
  }

  .settings {
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
  }

  .scroll-widget {
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    scroll-speed: 11;
    padding: 0;

    .entries {
      left: 0;
      top: 0;
      right: 0;
      height: fit-content;

      .entry {
        width: 100%;
        height: 8;
        space-between-entries: 4;
        padding: 2 2 2 2;

        background-color: rgba(170, 170, 170, 30);

        Component {
          font-size: small;
          max-width: 100%;
          max-lines: 1;
          alignment-y: center;
        }

        .display-name {
          left: 0;
          top: 50%;
        }

        .delete {
          right: 0;
          top: 50%;
          width: 8;
          height: width;
          alignment-y: center;
          margin: 1 0 0 0;

          alignment: right;
          clickable: true;

          color: red;
          use-floating-point-position: true;
        }
      }

      .entry:hover {
        background-color: rgba(170, 170, 170, 70);
      }
    }

  }

}
