@import super();

.text-replacement-list {
  space-between-entries: 4;
  TextReplacement {
    background-color: rgba(70, 70, 70, 80);
    border-radius: 5;
    border-thickness: 0;

    &:hover {
      background-color: rgba(90, 90, 90, 100);
    }

    &:selected {
      padding: 1 !important;
      border: none !important;

      background-color: rgba(100, 100, 100, 150) !important;

      border-color: #008FE8 !important;
      border-thickness: 1.5 !important;
      border-softness: 0.5 !important;
    }
  }
}

.overview-button-menu {
  padding-bottom: 10;
}